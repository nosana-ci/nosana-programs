{
  "compilerOptions": {
    "types": [
      "mocha",
      "chai"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./tests/types"
    ],
    "lib": [
      "es2015"
    ],
    "module": "commonjs",
    "target": "es6",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "strict": true,
    "pretty": true,
    "noEmit": true,
    "noImplicitAny": false,
    "strictNullChecks": false
  }
}
